plt.figure(figsize=(12,4))
plt.plot(df["Time"], df["Specific_energy_GJ_per_ton"])
plt.xlabel("Time")
plt.ylabel("SEC (GJ/ton)")
plt.title("Specific Energy Consumption over Time")
plt.grid(True)
plt.show()
