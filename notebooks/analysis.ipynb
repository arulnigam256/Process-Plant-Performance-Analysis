plt.figure(figsize=(8,5))
plt.scatter(df["Reactor_T_K"], df["Conversion"], s=2, alpha=0.5)
plt.xlabel("Reactor Temperature (K)")
plt.ylabel("Conversion")
plt.title("Temperature vs Conversion")
