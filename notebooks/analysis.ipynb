import numpy as np
import pandas as pd

# ===============================
# 1. TIME INDEX
# ===============================
days = 180
points_per_day = 24 * 6  # 10-minute intervals
N = days * points_per_day  # 25,920 rows

time_index = pd.date_range(
    start="2025-01-01",
    periods=N,
    freq="10min"
)

t = np.arange(N)

np.random.seed(42)

# ===============================
# 2. FEED FLOW RATE (kg/h)
# ===============================
F0 = 10000

feed_flow = (
    F0 * (1 + 0.03 * np.sin(2 * np.pi * t / points_per_day))
    + np.random.normal(0, 200, N)
)

feed_flow = np.clip(feed_flow, 9000, 11000)

# ===============================
# 3. REACTOR TEMPERATURE (K)
# ===============================
T0 = 850

U = np.zeros(N)
recovery_days = [(30, 35), (65, 70), (100, 104), (135, 140)]

for start, end in recovery_days:
    U[start * points_per_day : end * points_per_day] = 1

temperature = (
    T0
    + 20 * np.sin(2 * np.pi * t / (2 * points_per_day))
    + 40 * U
    + np.random.normal(0, 5, N)
)

temperature = np.clip(temperature, 800, 930)

# ===============================
# 4. REACTOR PRESSURE (bar)
# ===============================
pressure = 20 + np.random.normal(0, 0.3, N)
pressure = np.clip(pressure, 18, 22)

# ===============================
# 5. FOULING INDEX
# ===============================
fouling = np.zeros(N)
kf = 3e-5

for i in range(1, N):
    fouling[i] = fouling[i - 1] + kf

cleaning_days = [45, 90, 135]

for day in cleaning_days:
    fouling[day * points_per_day :] = 0.1

fouling = np.clip(fouling, 0, 1)

# ===============================
# 6. CONVERSION
# ===============================
X_ideal = 0.55 + 0.0009 * (temperature - 850)

conversion = (
    X_ideal * (1 - 0.4 * fouling)
    + np.random.normal(0, 0.01, N)
)

conversion = np.clip(conversion, 0.4, 0.75)

# ===============================
# 7. DOWNTIME FLAG
# ===============================
downtime = np.zeros(N)

downtime_events = [
    (20, 1),
    (52, 2),
    (78, 1),
    (110, 2),
    (145, 1),
    (165, 2),
]

for day, duration in downtime_events:
    downtime[
        day * points_per_day : (day + duration) * points_per_day
    ] = 1

# ===============================
# 8. PRODUCT FLOW RATE
# ===============================
product_flow = feed_flow * conversion * (1 - downtime)

# ===============================
# 9. HEATER DUTY (MW)
# ===============================
Q_base = 8

Q_T = Q_base + 0.02 * (temperature - 850) ** 2

heater_duty = (
    Q_T * (1 + 0.6 * fouling)
    + np.random.normal(0, 0.2, N)
)

heater_duty[downtime == 1] = 0.3 * Q_base

# ===============================
# 10. SPECIFIC ENERGY CONSUMPTION
# ===============================
SEC = np.zeros(N)

mask = product_flow > 0
SEC[mask] = (
    heater_duty[mask] * 3600 / product_flow[mask] * 1e-3
)
SEC[~mask] = np.nan

# ===============================
# 11. THROUGHPUT LOSS
# ===============================
throughput_loss = (
    0.05 * fouling
    + np.random.normal(0, 0.005, N)
)

throughput_loss = np.clip(throughput_loss, 0, 0.15)

# ===============================
# 12. DATAFRAME
# ===============================
df = pd.DataFrame({
    "Time": time_index,
    "Feed_flow_kgph": feed_flow,
    "Reactor_T_K": temperature,
    "Reactor_P_bar": pressure,
    "Fouling_index": fouling,
    "Conversion": conversion,
    "Product_flow_kgph": product_flow,
    "Heater_duty_MW": heater_duty,
    "Specific_energy_GJ_per_ton": SEC,
    "Downtime_flag": downtime,
    "Throughput_loss": throughput_loss
})

# ===============================
# 13. EXPORT
# ===============================
df.to_csv("plant_data.csv", index=False)

print("Data generated.")

# Show first 5 rows
print(df.head())

# Show last 5 rows
print(df.tail())

