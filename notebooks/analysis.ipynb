plt.figure(figsize=(8,5))
plt.scatter(df["Fouling_index"], df["Heater_duty_MW"], s=2, alpha=0.5, color='orange')
plt.xlabel("Fouling Index")
plt.ylabel("Heater Duty (MW)")
